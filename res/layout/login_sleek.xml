<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundplain" >

    <ImageView
        android:id="@+id/loginBackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/vptext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" 
        android:paddingBottom="100dp"/>

    <LinearLayout
        android:id="@+id/loginCredentialsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="invisible" >

        <EditText
            android:id="@+id/loginCredentialsUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfieldshape"
            android:ems="10"
            android:hint="Username"
            android:padding="8dp"
            android:singleLine="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/loginCredentialsPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfieldshape"
            android:ems="10"
            android:hint="Passwort"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5" >

            <Button
                android:id="@+id/loginCredentialsLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/loginbutton"
                android:text="Login"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/loginCredentialsInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/loginbutton"
                android:text=" ? "
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/loginShowLogin"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/loginbutton"
		android:textSize="20dp"
        android:text="LOGIN"
        android:textColor="@android:color/white" />

</RelativeLayout>